{
  "imports": {
    "@std/assert": "https://deno.land/std@0.224.0/assert/mod.ts",
    "@shared/": "./supabase/functions/_shared/",
    "@supabase/supabase-js": "npm:@supabase/supabase-js@2.78.0",
    "@supabase/auth-js": "npm:@supabase/auth-js@2.78.0",
    "@supabase/postgrest-js": "npm:@supabase/postgrest-js@2.78.0",
    "@supabase/functions-js": "npm:@supabase/functions-js@2.78.0",
    "@supabase/realtime-js": "npm:@supabase/realtime-js@2.78.0",
    "@supabase/storage-js": "npm:@supabase/storage-js@2.78.0",
    "zod": "npm:zod@3.25.76",
    "pdf-lib": "npm:pdf-lib@1.17.1",
    "std/": "https://deno.land/std@0.224.0/"
  },
  "nodeModulesDir": "auto",
  "compilerOptions": {
    "strict": true,
    "lib": ["deno.ns", "dom"]
  },
  "tasks": {
    "edge-check-all": "deno check --no-lock --compact -q supabase/functions/**/index.ts",
    "edge-lint": "deno lint supabase/functions",
    "check:functions": "deno check supabase/functions/**/index.ts"
  },
  "lint": {
    "rules": {
      "exclude": ["no-explicit-any"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100
  }
}
